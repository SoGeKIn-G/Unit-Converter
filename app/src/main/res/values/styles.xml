<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ll_commen_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="image_commen_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_column">1</item>
    </style>

    <style name="text_commen_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ll_lastrow_commen_style">

        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>